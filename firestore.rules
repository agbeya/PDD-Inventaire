
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }

    match /{document=**} {
      allow read: if signedIn();
    }

    match /users/{uid} {
      allow create: if signedIn();
      allow read, update: if signedIn() && request.auth.uid == uid;
    }

    match /activities/{activityId} {
      allow create: if signedIn();
      allow update, read: if signedIn();
    }

    match /activities/{activityId}/serviceItems/{serviceId}/items/{itemId} {
      allow read, create, update: if signedIn();
    }

    match /years/{id} { allow read, create, update: if signedIn(); }
    match /zones/{id} { allow read, create, update: if signedIn(); }
    match /subzones/{id} { allow read, create, update: if signedIn(); }
    match /services/{id} { allow read, create, update: if signedIn(); }
  }
}
